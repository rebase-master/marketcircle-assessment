<%= form_with(model: person) do |form| %>
  <div class="mb-2">
    <%= form.text_field :name, placeholder: "Edit person", class: "mb-1 form-control form-control-sm" %>
    <div class="text-center">
      <%= form.submit "Save", class: "btn btn-sm btn-primary" %>
      <%= button_to "Cancel", person_path, method: :get, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
<% end %>
