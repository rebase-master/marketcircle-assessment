<%= turbo_frame_tag person do %>
  <%= link_to person_details_path(person), data: { turbo_method: :get, turbo_stream: true },
              class: 'float-start link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' do %>
    <%= person.name %>
  <% end %>
  <%= link_to edit_person_path(person), data: { turbo_method: :get, turbo_stream: true },
              class: 'float-end ms-2 link-secondary icon-link icon-link-hover', style: "--bs-icon-link-transform: translate3d(0, -.125rem, 0);" do %>
    <i class="bi bi-pencil-square"></i>
  <% end %>
  <%= link_to person_path(person), data: { turbo_method: :delete, turbo_stream: true },
              class: 'float-end link-secondary icon-link icon-link-hover', style: "--bs-icon-link-transform: translate3d(0, -.125rem, 0);" do %>
    <i class="bi bi-trash"></i>
  <% end %>
<% end %>